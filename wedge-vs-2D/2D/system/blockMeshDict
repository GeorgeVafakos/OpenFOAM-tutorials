FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

// Geometric parameters
D_e 1.0;
L 20.0;
R_e #calc "$D_e /2.0";

vertices
(
    (0 0 0)
    ($L 0 0)
    ($L $R_e 0)
    (0 $R_e 0)
    (0 0 0.1)
    ($L 0 0.1)
    ($L $R_e 0.1)
    (0 $R_e 0.1)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (150 20 1) simpleGrading (5 1 1)
);

edges
(
);

boundary
(
    top
    {
        type wall;
        faces
        (
            (3 7 6 2)
        );
    }

    inlet
    {
        type patch;
        faces
        (
            (0 4 7 3)
        );
    }

    outlet
    {
        type patch;
        faces
        (
            (2 6 5 1)
        );
    }

    axis
    {
        type symmetry;
        faces
        (
            (1 5 4 0)
        );
    }
    frontAndBack
    {
        type empty;
        faces
        (
            (0 3 2 1)
            (4 5 6 7)
        );
    }
);

mergePatchPairs
(
);

